IF OBJECT_ID('Produkty','U') IS NOT NULL
		drop table Produkty

CREATE TABLE Produkty (
idP int identity (100000,1) not null primary key,
kategoria varchar(30) not null CHECK (kategoria in ('kowbojki','paski do ostrog','kapelusze','odziez','dodatki','zapalniczki ZIPPO','rewolwery','konie')),
podkategoria varchar(20),
plec varchar(1) CHECK (plec in ('d','m','u')),
producent varchar(50),
rozmiar varchar(5),
cena int,
opis varchar(200),
zdjecie varchar(100),
);

